#include<bits/stdc++.h>
using namespace std;
int main()
{
	string s;
	cin >> s;int cont = 0;
	for(int i=0;i<s.length();i++)
	{
		if(s[i]=='4'||s[i]=='7')
		cont++;
	}//cout << cont;
	string  p = to_string(cont);
    for(int i=0;i<p.length();i++)
    {
        if(p[i]!='4'&&p[i]!='7')
        {
        	cout << "NO" <<endl;
        	return 0;
        }
    }
    cout << "YES" << endl;
}
